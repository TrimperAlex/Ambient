<h1>My Weather Events</h1>
<div class="container">
  <div>
    <%= link_to "Create a New Weather Event", new_weather_event_path %>
  </div>

  <div class="cards">
    <% @my_weather_events.each do |event| %>
      <%= link_to weather_event_path(event) do  %>
        <div class="card-category"
            style="background-image: linear-gradient(rgba(0,0,0,0.3),
            rgba(0,0,0,0.3)),
            url('<%= asset_path(event.image_url) %>')">
          <%= event.description %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

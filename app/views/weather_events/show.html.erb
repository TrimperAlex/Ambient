<div class="container">
    <h1><%= @weather_event.description %></h1>
  <div class="show-page">
    <div class="showcard">
      <% if @weather_event.photo.attached? %>
        <%= cl_image_tag @weather_event.photo.key, width: 200 %>
      <% else %>
        <%# <div class="weather-image"> %>
        <img alt="WeatherEventimage" width="200px" src="/assets/<%= @weather_event.image_url %>" alt="">
      <% end %>

      <p>Temperature: <%= @weather_event.temperature %></p>
      <p>Category: <%= @weather_event.category %></p>
      <p>Price: $ <%= @weather_event.price %></p>
      <br>
      <% if @weather_event.owner == current_user %>
        <%= link_to "Edit", edit_weather_event_path, class: 'btn-weather' %>
        <%= link_to "Delete", weather_event_path(@weather_event), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete?" }, class: 'btn-weather' %>
      <% else %>
        <%= link_to "Book this Weather Event", new_weather_event_booking_path(@weather_event, @booking), class: 'btn-weather', id:"btn-showpage" %>
      <% end %>
      <br>
    </div>

    <%# we need to move this to the owner of W-E page %>
  </div>
</div>

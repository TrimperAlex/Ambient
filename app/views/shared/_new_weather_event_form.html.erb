<div class="my-5"></div>
<div class="container">
  <%= simple_form_for(weather_event) do |f| %>
    <div class="form-inputs">
      <%= f.input :description, placeholder: 'describe your event' %>
      <%= f.input :category, collection: [ "sun", "rain", "snow", "storm", "wind"]%>
      <%= f.input :temperature %>
      <%= f.input :price %>
      <%= f.input :image_url %>
      <%= f.input :photo, as: :file %>
      <%= f.submit 'Add!', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

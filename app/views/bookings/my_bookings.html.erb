<div class="my-5"></div>
<div class="container">
  <h1>All of My Bookings!</h1>
  <ul>
      <% @bookings.each do |booking| %>
        <li>
          <h6><%= booking.weather_event.description %></h6>
          <p><%= booking.location %></p>
          <p><%= booking.date %></p>
          <p><%= booking.status %></p>
          <%= link_to "Check Out This Booking", booking_path(booking) %>
        </li>
      <% end %>
  </ul>
  <div style="width: 600px; height: 400px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
